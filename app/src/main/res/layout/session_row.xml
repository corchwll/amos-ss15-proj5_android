<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:paddingTop="5dp"
              android:paddingBottom="5dp"
              android:weightSum="1.0">

    <TextView
            android:id="@+id/showDateSessionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="0.3"/>

    <TextView
            android:id="@+id/startTimeSessionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="0.2"/>

    <TextView
            android:id="@+id/stopTimeSessionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="0.2"/>

    <TextView
            android:id="@+id/durationSessionRow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:layout_weight="0.2"/>

    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_session_btn"
            android:contentDescription="@string/delete_icon_session"
            android:src="@drawable/ic_cancel_black_24dp"
            android:layout_weight="0.1"
            android:visibility="gone"/>
</LinearLayout>
